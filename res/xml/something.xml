<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/somethingos_dashboard_title">

    <com.android.settingslib.widget.IllustrationPreference
        android:key="something_illustration"
        settings:lottie_rawRes="@raw/something_illustration"
        android:order="-1001" />

    <Preference
        android:key="pintegrity_category"
        settings:layout="@layout/something_dashboard_preference_top"
        android:title="@string/something_play_integrity_dashboard_title"
        android:summary="@string/play_integrity_summary"
        android:fragment="org.somethingos.somethingsettings.fragments.playintegrity.PlayIntegrity"
        android:icon="@drawable/ic_playintegrity" />

    <Preference
        android:key="spoofing_category"
        settings:layout="@layout/something_dashboard_preference_middle"
        android:title="@string/something_spoofing_dashboard_title"
        android:summary="@string/spoofing_summary"
        android:fragment="org.somethingos.somethingsettings.fragments.spoofing.Spoofing"
        android:icon="@drawable/ic_spoofing" />

    <Preference
        android:key="ui_category"
        settings:layout="@layout/something_dashboard_preference_middle"
        android:title="@string/something_ui_dashboard_title"
        android:summary="@string/something_ui_summary"
        android:fragment="org.somethingos.somethingsettings.fragments.ui.UI"
        android:icon="@drawable/ic_ui" />

    <Preference
        android:key="system_category"
        settings:layout="@layout/something_dashboard_preference_middle"
        android:title="@string/something_system_dashboard_title"
        android:summary="@string/something_system_summary"
        android:fragment="org.somethingos.somethingsettings.fragments.system.System"
        android:icon="@drawable/ic_somesystem" />

    <Preference
        android:key="about_something"
        settings:layout="@layout/something_dashboard_preference_bottom"
        android:title="@string/about_something_title"
        android:fragment="org.somethingos.somethingsettings.fragments.aboutsomething.AboutSomething"
        android:icon="@drawable/ic_aboutsomething" />


</PreferenceScreen>
